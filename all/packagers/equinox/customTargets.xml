<project default="assemble">

	<target name="assemble">
		<exec executable="unzip" dir="${basedir}">
			<arg line="-j -qq ${buildDirectory}/${buildLabel}/eclipse-master-${buildId}.zip eclipse/plugins/org.eclipse.osgi* eclipse/plugins/org.eclipse.equinox* -x eclipse/plugins/org.eclipse.osgi*test* -d ${equinoxPostingDirectory}" />
		</exec>

		<mkdir dir="${equinoxPostingDirectory}/${buildLabel}/checksum" />
		<exec dir="${equinoxPostingDirectory}/${buildLabel}" executable="sh" os="Linux">
			<arg line="${basedir}/produceChecksum" />
		</exec>
		
		<ant antfile="customTargets.xml" inheritAll="false" dir="${builder}/../equinox/launchers/">
			<property name="buildDirectory" value="${buildDirectory}" />
			<property file="${buildDirectory}/label.properties" />
			<property name="builder" value="${builder}/../equinox/launchers" />
			<property name="postingDirectory" value="${postingDirectory}" />
			<property name="equinoxPostingDirectory" value="${postingDirectory}/../../equinox/drops" />
			<property name="buildType" value="${buildType}"/>
		</ant>
	</target>

</project>
