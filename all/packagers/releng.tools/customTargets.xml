<project default="assemble">

	<target name="assemble">
		<unzip src="${archiveFullPath}" dest="${builder}/packagers/releng.tools/tmp">
			<patternset dir=".">
				<include name="**/plugins/org.eclipse.releng.tools*.jar" />
			</patternset>
		</unzip>
		<property name="relengToolsArchive" value="org.eclipse.releng.tools-${buildId}.zip" />
		<zip destfile="${postingDirectory}/${buildLabel}/${relengToolsArchive}" basedir="${builder}/packagers/releng.tools/tmp" />
		<checksum file="${archiveFullPath}" property="md5" />
		<echo message="${md5} *${relengToolsArchive}" file="${postingDirectory}/${buildLabel}/checksum/${relengToolsArchive}.md5" />
	</target>

</project>
