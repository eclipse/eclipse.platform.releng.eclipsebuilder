<project name="Compile Verification" default="run" basedir=".">
	<taskdef name="verifyCompile" classname="org.eclipse.releng.CompileErrorCheck"/>
	
	<property file="label.properties" />
	<property file="monitor.properties" />

	<target name="run">
		<echo message="Checking for compile errors..." />
		<!-- Sends email to recipient list in monitor.properties with compile logs attached if errors found-->
		<verifyCompile install="${buildDirectory}" />
	</target>

</project>