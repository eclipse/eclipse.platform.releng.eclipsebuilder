<project name="Custom Targets MyTest" default="noDefault">

<target name="noDefault" />
	
<!-- This goal of this target is to get the packaging map files of the things you care for 
        The files must be fetched into the downloadDirectory folder -->
<target name="getMapFiles" unless="mapsFetched">
	<copy file="d:/tmp/all.maps" tofile="${downloadDirectory}/initial.map"/>
  	<!--<get usetimestamp="true" src="file:d:/tmp/eclipse.map" dest="${downloadDirectory}/eclipse.map"/>-->
</target>

<target name="init">
	<property name="nameArchive" value="IES"/>
</target>

<target name="assemble.win32.win32.x86.xml" depends="init">
	<ant antfile="${assembleScriptName}" target="assemble">
		<property name="archiveName" value="${nameArchive}-win32.zip"/>
	</ant>
</target>

