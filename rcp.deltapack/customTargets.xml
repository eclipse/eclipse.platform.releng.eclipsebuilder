<project name="Build specific targets and properties" default="noDefault" basedir=".">

<property name="postingDirectory" value="${buildDirectory}" />

<!-- ===================================================================== -->
<!-- Run a given ${target} on all elements being built -->
<!-- ===================================================================== -->
<target name="allElements">
	<ant antfile="${genericTargets}" target="${target}" >
		<property name="type" value="feature" />
		<property name="id" value="org.eclipse.launchers" />
	</ant>
</target>

<!-- ===================================================================== -->
<!-- Targets to assemble the built elements for particular configurations  -->
<!-- These generally call the generated assemble scripts (named in -->
<!-- ${assembleScriptName}) but may also add pre and post processing -->
<!-- Add one target for each root element and each configuration -->
<!-- ===================================================================== -->

<!-- POST STEPS TO ADD -->
<target name="assemble.org.eclipse.launchers">
		 <property name="feature.destination" value="${buildDirectory}/features/org.eclipse.launchers"/>
		 <antcall target="assemble" />
</target>

<target name="assemble">
	<property name="archiveName" value="eclipse-RCP-${buildId}-delta-pack.zip"/>
    <ant target="zip.distribution" antfile="build.xml" dir="${buildDirectory}/features/org.eclipse.launchers"/>
    <ant antfile="package.xml" dir="${pde.build.scripts}" inheritAll="false">
      <property name="buildDirectory" value="${buildDirectory}"/>
      <property name="postingDirectory" value="${postingDirectory}"/>
      <property name="buildLabel" value="${buildLabel}"/>
      <property name="buildId" value="${buildId}"/>
      <property name="packagingInfo" value="${builder}/scripts"/>
    </ant>

    <move file="${buildDirectory}/deltapacktmp/workingPlace/${buildId}/${archiveName}" todir="${postingDirectory}/${buildLabel}"/>            
    <mkdir dir="${postingDirectory}/${buildLabel}/checksum" />
	<checksum file="${postingDirectory}/${buildLabel}/${archiveName}" property="md5"/>
	<echo message="${md5} *${archiveName}" file="${postingDirectory}/${buildLabel}/checksum/${archiveName}.md5"/>    
</target>

<!-- ===================================================================== -->
<!-- Check out map files from correct repository -->
<!-- Replace values for cvsRoot, package and mapVersionTag as desired. -->
<!-- ===================================================================== -->
<target name="checkLocal">
	<available property="mapsLocal" file="${buildDirectory}/maps/org.eclipse.releng" />
</target>
<target name="getMapFiles" depends="checkLocal" unless="mapsLocal">

	<!-- ***  change the repo info -->
	<property name="mapCvsRoot" value=":pserver:anonymous@dev.eclipse.org:/home/eclipse" />
	<property name="mapVersionTag" value="HEAD" />
	<cvs cvsRoot="${mapCvsRoot}"
		package="org.eclipse.releng"
		dest="${buildDirectory}/maps"
		tag="${mapVersionTag}"
	/>
	<!--tag the map files project-->
	<antcall target="tagMapFiles" />
</target>

<target name="tagMapFiles" if="tagMaps">
	<cvs dest="${buildDirectory}/maps/org.eclipse.releng" command="tag ${buildId}" />
</target>

